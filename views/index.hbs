<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

<form id="queryForm">
	<div class="row">
		<div class="col-md-6 mb-3">
			<div class="mt-3">
				<input type="text" required class="form-control" placeholder="Enter Channel Id" rows="6" name="channelId"
					id="channelId" aria-describedby="emailHelp">
			</div>
		</div>
	</div>
	<button type="submit" id="queryFormBtn" class="btn btn-primary">Submit</button>
</form>
<br>
<br>
<div id="search-results"></div>
<script>
	$(document).ready(function () {
		let data = {
			channelId: '',
		};

		// On form submit hit the translate API
		$('#queryForm').on('submit', function (e) {
			e.preventDefault();
			data.channelId = $('#channelId').val();
			$('#queryFormBtn').attr('disabled', 'true');
			fetchVideosApi(data)
		})

		function fetchVideosApi(data) {
			$.ajax({
				url: '/fetch_videos',
				type: 'POST',
				data: {
					channelId: data.channelId,
				},
				dataType: 'json',
				success: function (msg) {
					$('#search-results').html(msg.html);
					$('#queryFormBtn').html('Submit');
					$('#queryFormBtn').removeAttr('disabled');
				},
				error: function (jqXHR, textStatus) {
					let responseText = jQuery.parseJSON(jqXHR.responseText);
				}
			});
		}
	})
</script>